{
  "name": "vanilla-framework",
  "displayName": "Vanilla Framework Intellisense",
  "description": "Intelligent Vanilla framework suggestions for VS Code",
  "version": "1.0.0",
  "publisher": "goulinkh",
  "license": "MIT",
  "categories": [
    "Linters"
  ],
  "preview": true,
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.43.0"
  },
  "keywords": [
    "vanilla",
    "vanilla-framework",
    "intellisense",
    "autocompletion"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:scss",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:django-html"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/goulinkh/vanilla-framework.git"
  },
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "commands": [
      {
        "command": "vanilla-framework-intellisense.vf-snippets",
        "title": "insert a snippet",
        "category": "Vanilla Framework",
        "enablement": "resourceLangId == html || resourceLangId == javascriptreact || resourceLangId == typescriptreact || resourceLangId == django-html"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && yarn install && cd ../server && yarn install && cd ..",
    "clean": "rm -rf node_modules && cd client && rm -rf node_modules out&& cd ../server &&rm -rf node_modules out && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.16",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "mocha": "^10.0.0",
    "typescript": "^4.8.3"
  }
}
